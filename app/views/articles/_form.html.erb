<div class="container">
  <%= render "shared/errors" %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-success rounded form-container", local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        
        <div class="form-group row justify-content-center">
          <div class="col-2"></div>
          <div class="col-3">
          <%= f.submit class: "btn btn-outline-light btn-lg button-size" %>
          </div>
        </div>
      <% end %>
    </div>
     
          <% if @article.persisted? %>
          <div class="justify-content-center row">
          <div class="col-2"></div>
              <div class="col-6 mb-3">
          <%= link_to '[ Show this article ]', @article, class: "text-info" %>
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
        
        </div>  
      </div>
  </div>

        <% else %>
        <div class="justify-content-center row">
      <div class="col-2"></div>
          <div class="col-4 mb-3">
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
        </div>  
      </div>
  </div>
        <% end %>
      </div>  
      </div>
  </div>
</div>